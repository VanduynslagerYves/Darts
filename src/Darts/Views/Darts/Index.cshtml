@model IEnumerable<Darts.Models.Domain.Speler>

@{
    ViewData["Title"] = "Spelers";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-controller="Darts" asp-action="Create">Voeg een speler toe</a>
</p>

<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>Naam</th>
        <th>Totaal gewonnen punten</th>
        <th>Totaal verloren punten</th>
        <th>Matches gespeeld</th>
        <th class="text-right">Datum toegevoegd</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Voornaam @item.Naam
            </td>
            <td>
                @item.TotaalPunten
            </td>
            <td>
                @item.VerlorenPunten
            </td>
            <td>
                @item.AantalGespeeld
            </td>
            <td class="text-right">
                @(item.DatumToegevoegd.Date.ToString("d") ?? "-")
            </td>
            <td>
                <a asp-controller="Darts" asp-action="Detail" asp-route-id="@item.Id">Detail</a> |
                <a asp-controller="Darts" asp-action="Edit" asp-route-id="@item.Id">Wijzig</a> |
                <a asp-controller="Darts" asp-action="Delete" asp-route-id="@item.Id">Verwijder</a>
            </td>
        </tr>
    }
</table>